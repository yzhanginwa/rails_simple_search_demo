<div id="<%= dom_id address %>">
  <p class="my-5">
    <strong class="block font-medium mb-1">Address1:</strong>
    <%= address.address1 %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Address2:</strong>
    <%= address.address2 %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">City:</strong>
    <%= address.city %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">State:</strong>
    <%= address.state %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Zip:</strong>
    <%= address.zip %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Addressable type:</strong>
    <%= address.addressable_type %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Addressable:</strong>
    <%= address.addressable_id %>
  </p>

  <% if action_name != "show" %>
    <%= link_to "Show this address", address, class: "rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
    <%= link_to "Edit this address", edit_address_path(address), class: "rounded-lg py-3 ml-2 px-5 bg-gray-100 inline-block font-medium" %>
    <hr class="mt-6">
  <% end %>
</div>
